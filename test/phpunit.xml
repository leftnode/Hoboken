<phpunit bootstrap="Bootstrap.php" colors="true" convertErrorsToExceptions="true" convertNoticesToExceptions="true" convertWarningsToExceptions="true" stopOnFailure="true" syntaxCheck="true">
	
	<testsuites>
		<testsuite name="Hoboken Tests">
			<file>AllTests.php</file>
		</testsuite>
	</testsuites>

	<filter>
		<whitelist>
			<directory suffix=".php">../Hoboken/</directory>
		</whitelist>
	</filter>
	
	<logging>
		<log type="coverage-html" target="_Coverage" charset="UTF-8" yui="true" highlight="true" />
	</logging>
</phpunit>
